pipeline {
    agent any

    tools {
        maven 'Maven'  // Make sure this is configured in Jenkins â†’ Tools
    }

    environment {
        SONAR_TOKEN = credentials('sonarqube-token')
        SONAR_HOST_URL = 'http://http://192.168.33.10:9000'  // Adjust if needed
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm  // Simpler checkout
            }
        }

        stage('Maven SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('SonarQube') {
                        sh """
                            mvn clean package -DskipTests sonar:sonar \
                            -Dsonar.projectKey=StudentsManagement-DevOps \
                            -Dsonar.login=${SONAR_TOKEN} \
                            -Dsonar.java.binaries=target/classes \
                            -Dsonar.host.url=${SONAR_HOST_URL}
                        """
                    }
                }
            }
        }
    }
}